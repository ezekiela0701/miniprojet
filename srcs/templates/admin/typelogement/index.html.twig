{% extends 'admin/base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{path('dashboard')}}">Dashboard</a></li>
                    <li class="breadcrumb-item active">Listes des types de logements</li>
                </ol>
            </div>
            <div class="col-sm-6">
                <span class="breadcrumb float-sm-right">
                    <a href="{{path('typelogement.add')}}" class="float-right btn btn-primary">Ajouter nouveaux</a>
                </span>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="card ">
    <div class="card-header">
        <h3 class="card-title">
            <center>Listes des types de logements</center>
        </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="listDrug" class="table table-bordered table-striped" widht="100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom </th>
                    <th>Action </th>
                </tr>
            </thead>
            <tbody>
                {% for typeLogementList in typeLogementLists %}
                    <tr>
                        <td>{{typeLogementList.id}}</td>
                        <td>{{typeLogementList.name}}</td>
                        <td>
                             <a href="{{path('typelogement.edit' , {"id":typeLogementList.id})}}" class="btn btn-rounded btn-success" data-toggle="tooltip" data-placement="bottom">
                                <i class="m-r-10 fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
{% endblock %}
{% block javascripts %}
    {{ include('admin/components/block/blockjs.datatable.html.twig', { 'table_id': 'listDrug', 'targets': 1 }) }}
{# {{ include('admin/block/blockjs.datatable.html.twig', { 'table_id': 'listPositions', 'targets': 4 }) }} #}
{% endblock %}


